<launch>

  <arg name="config" default="$(find longitudinal_control_ros_tool)/launch/params/longitudinal_controller_parameters.yaml" />

  <node pkg="longitudinal_control_ros_tool" type="longitudinal_controller" name="longitudinal_controller" output="screen">
    <rosparam command="load" file="$(arg config)"/>
    <remap from="/longitudinal_controller/motor_command" to="/motor_interface/motor_command" />
  </node>

</launch>
